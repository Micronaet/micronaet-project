<?xml version="1.0"?>
<openerp>
    <data>
    <record model="ir.ui.view" id="view_project_project_pricelist_form">
        <field name="name">project.project.pricelist.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@string='Team']" position="after">
                <page string="Pricelist">
                    <field name="pricelist_ids">
                       <tree string="Pricelist">
                           <field name="product_id"/>
                           <field name="pricelist"/>
                           <field name="note"/>
                       </tree>
                       <form string="Pricelist" version="7.0">
                           <sheet>
                               <group col="4">
                                   <field name="product_id"/>
                                   <field name="pricelist"/>
                                   <separator string="Note" colspan="4"/>
                                   <field name="note" colspan="4" nolabel="1"/>
                               </group>
                           </sheet>
                       </form>
                    </field>
                </page>            
            </xpath>
        </field>
    </record>
    </data>
</openerp>

